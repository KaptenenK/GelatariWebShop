@page "/register"

<PageTitle>Register</PageTitle>


<h3>Register</h3>

<EditForm Model="user" OnValidSubmit="HandleRegistration">
    <div class="mb-3">
        <label for="email">Mail</label>
        <InputText id="email" @bind-Value="user.Email" class="form-control"/>
    </div>
    <div class="mb-3">
        <label for="password">Lösenord</label>
        <InputText id="password" @bind-Value="user.Password" class="form-control" typeof="password" />
    </div>
    <div class="mb-3">
        <label for="confirmPassword">Bekräfta Lösenordet</label>
        <InputText id="confirmPassword" @bind-Value="user.ConfirmPassword" class="form-control" typeof="password" />
    </div>
    <button type="submit" class="btn btn-primary">Registrera</button>
</EditForm>
@code {
    //Lägga till user model 

    UserRegister user = new UserRegister();

    void HandleRegistration()
    {
        Console.WriteLine($"Registrera användare med mailaddress {user.Email}.");
    }
}
